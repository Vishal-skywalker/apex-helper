{
  "name": "apex-helper",
  "displayName": "Apex Helper - Formatter",
  "description": "Salesforce Apex",
  "publisher": "VishalSkywalker",
  "version": "2.0.1",
  "icon": "logo.png",
  "repository": "https://github.com/Vishal-skywalker/apex-helper",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:apex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "apex",
        "aliases": [
          "apex"
        ],
        "extensions": [
          "cls",
          "apex"
        ]
      }
    ],
    "commands": [
      {
        "command": "apex-helper.addComments",
        "title": "Add Comments (Apex Helper)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "apex-helper.addComments",
          "group": "apex-helper"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
